<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp">

    <ImageView
        android:id="@+id/bookmarks_link_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/bookmarks_link_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bookmarks_link_avatar"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingRight="40dp"/>
    <TextView
        android:id="@+id/bookmarks_link_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUCK"
        android:layout_toRightOf="@id/bookmarks_link_avatar"
        android:layout_below="@id/bookmarks_link_name"
        android:paddingRight="40dp"/>


    <ImageView
        android:id="@+id/icRemoveLink"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_arrow_drop_down_white_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true" />

</RelativeLayout>
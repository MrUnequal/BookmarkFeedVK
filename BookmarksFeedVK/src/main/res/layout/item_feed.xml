<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_holder_user_photo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />


        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="Duran Duran"
            android:layout_toRightOf="@id/user_photo"
            android:layout_alignParentTop="true"
            android:textColor="@color/grey600"
            android:textSize="14dp"/>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="5 minutes ago"
            android:layout_below="@id/user_name"
            android:layout_toRightOf="@id/user_photo"
            android:textColor="@color/grey600"
            android:textSize="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert"
            android:id="@+id/imageButton"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>



        <TextView
            android:id="@+id/contentFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content 1"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_messenger_grey600"
                android:id="@+id/commentsCountIcon"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/commentsCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_toEndOf="@id/commentsCountIcon"
                android:layout_toRightOf="@id/commentsCountIcon"

                />




            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10"
                android:textSize="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                />




            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_grey600"
                android:id="@+id/likesCountIcon"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/likesCount"
                />

            <TextView
                android:id="@+id/sharesCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@id/likesCountIcon"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_grey600"
                android:id="@+id/sharesCountIcon"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/sharesCount"
                />








</RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>